<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <div>
        <h2>User info</h2>
        <p><%= attachment_image_tag @user, :profile_image, :fill, 10, 10, fallback: "no_image.jpg" %></p>
        <p>name：<%= current_user.name %></p>
        <p>introduction：<%= current_user.introduction %></p>
      </div>

        <p><%= link_to "", edit_user_path(@user),class: "btn btn-outline-secondary btn-block fas fa-user-cog" %></p>

      <h1>New book</h1>
      <!-- form_with部分 -->
      <%= form_with model: @book, local:true do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %>
        <%= f.submit 'Create Book' %>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class='table table-hover table-inverse'>
       <thead>
         <tr>
           <th>
             image
           </th>
           <th>
             name
           </th>
           <th calspan="3">
           </th>
       </thead>
       <tbody>
          <% @users.each do |user| %>
        <tr>
          <td> <%= attachment_image_tag @user, :profile_image, :fill, 10, 10, fallback: "no_image.jpg" %>
          </td>
          <td><%= user.name %></td>
          <td> <%=link_to "Show", user_path(user) %></td>
        </tr>
          <% end %>
       </tbody>
      </table>
    </div>
  </div>
</div>


