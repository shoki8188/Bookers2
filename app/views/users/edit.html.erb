       <h2>User info</h2>
       <%= form_with model:@user, local:true do |f| %>
      <div class="form-group">
       <label for="inputName">Name</label>
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
      </div>
      <div class="form-group">
      <label for="inputImage">Image</label>
         <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
      </div>
      <div class="form-group">
        <label for="user_introduction">Introduction</label>
       <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:""%>
      </div>
           <%= f.submit "Update User" %>
        <% end %>
    </div>
  </div>
</div>